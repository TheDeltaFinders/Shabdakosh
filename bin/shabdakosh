from shabdakosh.readpdf import ReadPDF

def  read_page():
    PR = ReadPDF('../res/Large/split/splitted_438-438.pdf')
    for word,font in PR.get_word_font(True):
        print(f' {font } :: {word} ')
        
    for font in PR.font_set:
        print(font)

